@import url(https://fonts.googleapis.com/css?family=Josefin+Sans)

@import 'rupture'
@import 'jeet'
@import 'nib'
@import 'normalize'
@import 'clearfix'
@import 'variables'
@import 'tabs'
@import 'scroll'
@import 'form'

body
	color white
	font-family 'Josefin Sans', sans-serif
a
	text-decoration none
	color #fff
li
	list-style none
div
	box-sizing border-box
.page

	
.content
	
.head-content
	background url("../images/header-bg.jpg")
	background-size 100%
	background-size cover
	height 450px
	height 80vh

.header
	center(1000px)

.logo-container
	col(.7/3)
	clearfix()
	margin-left 9%

.nav
	col(1.66/3)
	clearfix()
	float right
.top-nav
	margin 3rem 0
.active
	border 1px solid teal-2
.top-nav-li
	display inline
	margin 0 0.5rem
	a
		padding 1rem 
		background rgba(0,0,0, 0.5)
		color white
		text-decoration none
		&:hover
			background rgba(0,0,0, 0.6)
.wrap
	center(800px)
	text-align center
.main-desc
	background rgba(0,0,0, 0.3)
	text-shadow 1px 1px 1px #999
	padding 1rem 5rem
	margin 1rem 0
	letter-spacing .05rem
	&:hover
		background rgba(0,0,0, 0.35)
	h1
		border-bottom 1px dotted #fff
		display inline-block
	p
		// text-shadow 1px 1px 1px #eee
.tab-content
	background teal
	clearfix()
.tabs-logo
	col(1/3)
.form-container
	background #333
	margin 0 auto
	clearfix()
	.sidebar
		col(.906/3)
		background teal
		padding 1rem 2rem
		text-align justify
		height 100%
		width 400px
		h2
			text-align center
		img
			display block
			margin 0 auto
		.location-div-text
			text-align center
		.last-two
			background #333
	.sidebar-3
		col(.906/3)				
	.sidebar-2
	.form-wrap
		col(1.7/3)
		margin 0 auto
.footer
	width 100%
	background teal
	padding 4rem 0 0
	clearfix()
	nav
		center(460px)
		.footer-ul
			display inline-block
			margin 0
			padding 0
			li
				float left
				padding 0 1rem
	span
		display block
		text-align center
		margin 3rem 0
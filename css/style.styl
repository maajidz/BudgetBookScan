@import url(https://fonts.googleapis.com/css?family=Josefin+Sans)
@import 'normalize'
@import 'clearfix'
@import 'jeet'

@import 'variables'

body
	color white
	font-family 'Josefin Sans', sans-serif
.page

	
.content
	
.head-content
	background url("../images/header-bg.jpg")
	background-size 100%
	background-size cover
	height 450px
	height 80vh

.header
	center(1000px)

.logo-container
	col(1/3)
	clearfix()

.nav
	col(2/3)
	clearfix()

.top-nav
	margin 3rem 0
					
.top-nav-li
	display inline
	margin 0 0.5rem
	a
		padding 1rem 
		background dark-grey
		color white
		text-decoration none
		
.wrap
	center(800px)
	text-align center
.main-desc
	text-shadow 1px 1px 1px #999